/* pages/music-player/music-player.wxss */
.bg-image,
.bg-cover {
  position: fixed;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  z-index: -1;
}

.bg-cover {
  background-color: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(20px);
}

.tabs {
  display: flex;
  font-size: 28rpx;
  color: #aaa;
}

.tabs-devider {
  margin: 0 10rpx;
}

.music {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 40rpx 60rpx;
  color: #fff;
}

.music-album {
  margin-bottom: 30rpx;
  flex: 5;
}

.music-album_image {
  width: 100%;
  border-radius: 20rpx;
}

.music-info {
  margin-top: 20rpx;
  flex: 2;
}

.music-info_name {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 15rpx;
}

.music-lyric {
  flex: 1;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.music-lyric-time {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
}

.music-process {
  flex: 1;
}

.music-process-slider {
  margin: 10rpx 5rpx 10rpx 10rpx;
}

.music-control {
  display: flex;
  flex: 2;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.music-control image {
  width: 80rpx;
}

.music-control_mode.music-control_mode {
  width: 100rpx;
}

.music-control_play.music-control_play {
  width: 110rpx;
}

.lyric-list {
  height: 100%;
  text-align: center;
}

.lyric-list ::-webkit-scrollbar {
  display: none;
}

.lyric-list_detail {
  color: #aaa;
  font-size: 28rpx;
  height: 35px;
  line-height: 35px;
}

.lyric-active {
  color: #0f0;
}

