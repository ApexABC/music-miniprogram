<!--components/song-item-v3/song-item-v3.wxml-->
<view class="item" bindtap="onSongItemClick">
  <view class="index">{{index}}</view>
  <view class="info">
    <view class="info-name">{{itemData.name}}</view>
    <view class="info-detail">
      <image class="info-detail-icon" src="/assets/images/icons/sq_icon.png" mode="widthFix" />
      <view class="info-detail-arti">{{itemData.ar[0].name}}</view>
    </view>
  </view>
  <image class="album" src="{{itemData.al.picUrl}}" mode="widthFix" />
</view>