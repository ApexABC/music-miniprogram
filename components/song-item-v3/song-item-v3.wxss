/* components/song-item-v3/song-item-v3.wxss */

.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 10rpx;
  box-sizing: border-box;
  height: 155rpx;
  border-bottom: 1px solid #ddd;
}

.index {
  width: 10rpx;
  padding: 0 20rpx;
}

.info {
  width: 460rpx;
}

.info-detail {
  display: flex;
  align-items: center;
  font-size: 26rpx;
}

.info-detail-icon {
  width: 50rpx;
  margin-right: 8rpx;
}

.album {
  width: 140rpx;
  border-radius: 10rpx;
}