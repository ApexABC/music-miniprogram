/* components/ranking-item/ranking-item.wxss */
.ranking {
  display: flex;
  justify-content: space-between;
  background-color: #eee;
  box-sizing: border-box;
  border-radius: 15rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
  height: 200rpx;
}

.content {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.content .title {}

.content .ranking-list {
  font-size: 25rpx;
}

.album {
  position: relative;
}

.album-image {
  width: 200rpx;
  padding: 0;
  margin: 0;
}

.album-count {
  position: absolute;
  bottom: 0rpx;
  right: 5rpx;
  color: #fff;
  font-size: 23rpx;
  background-color: rgba(10, 10, 10, 0.5);
}