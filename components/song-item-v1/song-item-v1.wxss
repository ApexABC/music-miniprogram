/* components/song-item-v1/song-item-v1.wxss */
.item {
  padding: 0 30rpx;
  margin: 30rpx 0;
  display: flex;
  justify-content: space-between;
}

.image {
  width: 140rpx;
  border-radius: 15rpx;
}

.info {
  width: 470rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}

.info .singer {
  color: #888;
  font-size: 26rpx;
}

.arrow {
  display: flex;
  align-items: center;
}